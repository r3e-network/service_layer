{
  "extends": "../tsconfig.miniapp.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    },
    "types": [
      "@dcloudio/types",
      "@types/qrcode"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
