<?xml version="1.0" encoding="UTF-8"?>
<!--
  SGX Enclave Configuration

  This file configures the enclave's security properties and resource limits.

  Key settings:
  - ProdID: Product ID (unique per enclave type)
  - ISVSVN: Security Version Number (increment on security updates)
  - StackMaxSize: Maximum stack size per thread
  - HeapMaxSize: Maximum heap size
  - TCSNum: Number of Thread Control Structures (concurrent threads)
  - DisableDebug: Set to 1 for production (prevents debugging)
-->
<EnclaveConfiguration>
    <!-- Product ID - unique identifier for this enclave -->
    <ProdID>0</ProdID>

    <!-- ISV Security Version Number - increment on security patches -->
    <ISVSVN>0</ISVSVN>

    <!-- Stack configuration -->
    <StackMaxSize>0x40000</StackMaxSize>      <!-- 256 KB max stack -->
    <StackMinSize>0x2000</StackMinSize>       <!-- 8 KB min stack -->

    <!-- Heap configuration -->
    <HeapMaxSize>0x1000000</HeapMaxSize>      <!-- 16 MB max heap -->
    <HeapMinSize>0x100000</HeapMinSize>       <!-- 1 MB min heap -->
    <HeapInitSize>0x100000</HeapInitSize>     <!-- 1 MB initial heap -->

    <!-- Thread Control Structures (max concurrent threads) -->
    <TCSNum>10</TCSNum>
    <TCSMaxNum>10</TCSMaxNum>
    <TCSMinPool>1</TCSMinPool>

    <!-- TCS Policy: 0 = unbound, 1 = bound -->
    <TCSPolicy>1</TCSPolicy>

    <!-- Debug mode: 0 = disabled (production), 1 = enabled (development) -->
    <DisableDebug>0</DisableDebug>

    <!-- Misc settings -->
    <MiscSelect>0</MiscSelect>
    <MiscMask>0xFFFFFFFF</MiscMask>

    <!-- Reserved memory region size -->
    <ReservedMemMaxSize>0x0</ReservedMemMaxSize>
    <ReservedMemMinSize>0x0</ReservedMemMinSize>
    <ReservedMemInitSize>0x0</ReservedMemInitSize>
    <ReservedMemExecutable>0</ReservedMemExecutable>
</EnclaveConfiguration>
