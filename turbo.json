{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "env": [
        "NODE_ENV",
        "NEXT_PRIVATE_TARGET",
        "EDGE_API_BASE",
        "SENDGRID_API_KEY",
        "SENDGRID_FROM_EMAIL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "build:h5": {
      "dependsOn": ["^build"],
      "outputs": ["dist/build/h5/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": [],
      "cache": true
    },
    "test:run": {
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
