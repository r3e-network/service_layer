# Development Environment Configuration
# MarbleRun runs in --insecure mode (no SGX required)

# Environment
MARBLE_ENV=development

# MarbleRun Coordinator
COORDINATOR_CLIENT_ADDR=localhost:4433
# NOTE: This repo no longer ships a Go "gateway" service. Public gateway is
# Supabase Edge Functions. Select a service at runtime using SERVICE_TYPE=...

# MarbleRun Mode
MARBLERUN_INSECURE=true

# Neo N3 Network
NEO_RPC_URL=https://testnet1.neo.coz.io:443
NEO_NETWORK_MAGIC=894710606

# Supabase (Development Instance)
SUPABASE_URL=http://localhost:54321
# PostgREST base path for Supabase CLI.
SUPABASE_REST_PREFIX=/rest/v1
# Allow http:// Supabase URL in dev/test.
SUPABASE_ALLOW_INSECURE=true
# Service role key (keep secret). For local Supabase CLI you can get it via `supabase status`.
SUPABASE_SERVICE_KEY=your-local-supabase-service-role-key

# Service Ports
NEOFEEDS_PORT=8083
NEOFLOW_PORT=8084
NEOACCOUNTS_PORT=8085
NEOCOMPUTE_PORT=8086
NEOVRF_PORT=8087
ORACLE_PORT=8088
TXPROXY_PORT=8090
GLOBALSIGNER_PORT=8092
NEOGASBANK_PORT=8091
NEOSIMULATION_PORT=8093
NEOREQUESTS_MAX_RESULT_BYTES=800
NEOREQUESTS_MAX_ERROR_LEN=256
NEOREQUESTS_RNG_RESULT_MODE=raw
NEOREQUESTS_TX_WAIT=true
TXPROXY_TIMEOUT=90s
NEOREQUESTS_ENFORCE_APPREGISTRY=true
NEOREQUESTS_APPREGISTRY_CACHE_SECONDS=60
TOPUP_ENABLED=false
NEOACCOUNTS_ALLOW_EPHEMERAL_MASTER_KEY=false
NEOACCOUNTS_DELETE_RETIRING_ACCOUNTS=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security (Development - Relaxed)
JWT_EXPIRY=24h
RATE_LIMIT_ENABLED=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=5m

# Development Features
ENABLE_PROFILING=true
ENABLE_DEBUG_ENDPOINTS=true
