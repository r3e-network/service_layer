# Testing Environment Configuration
# Used for CI/CD and integration tests
# MarbleRun runs in --insecure mode (no SGX required)

# Environment
MARBLE_ENV=testing

# MarbleRun Coordinator
COORDINATOR_CLIENT_ADDR=coordinator:4433
# NOTE: This repo no longer ships a Go "gateway" service. Public gateway is
# Supabase Edge Functions. Select a service at runtime using SERVICE_TYPE=...

# MarbleRun Mode
MARBLERUN_INSECURE=true

# Neo N3 Network (TestNet)
NEO_RPC_URL=https://testnet1.neo.coz.io:443
NEO_NETWORK_MAGIC=894710606

# MiniApp platform contracts (testnet)
CONTRACT_PAYMENT_HUB_ADDRESS=0x0bb8f09e6d3611bc5c8adbd79ff8af1e34f73193
CONTRACT_GOVERNANCE_ADDRESS=0xc8f3bbe1c205c932aab00b28f7df99f9bc788a05
CONTRACT_PRICE_FEED_ADDRESS=0xc5d9117d255054489d1cf59b2c1d188c01bc9954
CONTRACT_RANDOMNESS_LOG_ADDRESS=0x76dfee17f2f4b9fa8f32bd3f4da6406319ab7b39
CONTRACT_APP_REGISTRY_ADDRESS=0x79d16bee03122e992bb80c478ad4ed405f33bc7f
CONTRACT_AUTOMATION_ANCHOR_ADDRESS=0x1c888d699ce76b0824028af310d90c3c18adeab5
CONTRACT_SERVICE_GATEWAY_ADDRESS=0x27b79cf631eff4b520dd9d95cd1425ec33025a53
TXPROXY_ALLOWLIST='{"contracts":{"0x0bb8f09e6d3611bc5c8adbd79ff8af1e34f73193":["pay"],"0xc8f3bbe1c205c932aab00b28f7df99f9bc788a05":["stake","unstake","vote"],"0xc5d9117d255054489d1cf59b2c1d188c01bc9954":["update"],"0x76dfee17f2f4b9fa8f32bd3f4da6406319ab7b39":["record"],"0x1c888d699ce76b0824028af310d90c3c18adeab5":["markExecuted"],"0x27b79cf631eff4b520dd9d95cd1425ec33025a53":["fulfillRequest"]}}'

# Supabase (Testing Instance)
SUPABASE_URL=${SUPABASE_TEST_URL}
SUPABASE_SERVICE_KEY=${SUPABASE_TEST_SERVICE_KEY}
SUPABASE_REST_PREFIX=/rest/v1
SUPABASE_ALLOW_INSECURE=false

# Service Ports
NEOFEEDS_PORT=8083
NEOFLOW_PORT=8084
NEOACCOUNTS_PORT=8085
NEOCOMPUTE_PORT=8086
NEOVRF_PORT=8087
ORACLE_PORT=8088
TXPROXY_PORT=8090
GLOBALSIGNER_PORT=8092
NEOGASBANK_PORT=8091
NEOSIMULATION_PORT=8093
NEOREQUESTS_MAX_RESULT_BYTES=800
NEOREQUESTS_MAX_ERROR_LEN=256
NEOREQUESTS_RNG_RESULT_MODE=raw
NEOREQUESTS_TX_WAIT=true
TXPROXY_TIMEOUT=90s
NEOREQUESTS_ENFORCE_APPREGISTRY=true
NEOREQUESTS_APPREGISTRY_CACHE_SECONDS=60
TOPUP_ENABLED=false
NEOACCOUNTS_ALLOW_EPHEMERAL_MASTER_KEY=false
NEOACCOUNTS_DELETE_RETIRING_ACCOUNTS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security (Testing - Moderate)
JWT_EXPIRY=1h
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m
CORS_ORIGINS=*

# Database
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=5m

# Testing Features
ENABLE_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=true
TEST_MODE=true
